{
    "name": "SublimeSocketChromeClient",
    "version": "0.6.0",
    "description": "The client that connect to SublimeSocket through WebSocket.",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "idle",
        "file://*/*",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "48": "48icon.png"
    },
    "background": {
        "scripts": [
            "SublimeSocketChromeClient.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/sublimesocketchromeicon-inactive.png",
        "default_title": "SublimeSocketChromeClient"
    },
    "offline_enabled": true
}